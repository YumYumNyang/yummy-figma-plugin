{
  "compilerOptions": {
    "lib": ["es5"],
    "target": "es5",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/@types"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0"
  }
}
